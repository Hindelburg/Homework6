@model AdventureWorks.Models.ViewModels.ProductCatVM

@{
    ViewBag.Title = "Product";
}

<div class="trans">
    <div class="row">
        <div class="col-md-4" style="padding-left:30px; width:400px">
            <div style="background-color:rgb(225, 225, 225); padding: 10px 10px 10px 10px; width:370px">
                <div>
                    @{
                        var image = String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.image.LargePhoto));
                    }
                    <img src="@image" ; style="width:350px" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div style="font-size:27px">
                @Html.DisplayFor(modelItem => Model.prod.Name)
            </div>
            <div style="color:darkgreen; padding-left: 5px">
                Our Price: $@Html.DisplayFor(modelItem => Model.prod.StandardCost)
            </div>
            <div style="color:grey; font-size: 11px; padding-left: 15px">
                List Price: $@Html.DisplayFor(modelItem => Model.prod.ListPrice)
            </div>
            <hr style="border-color:black" />
            <div, style="padding-left: 10px">
                @Html.DisplayFor(modelItem => Model.prodD.Description)
            </div,>
        </div>
    </div>

    <div>
        <br />
        <h4>Product Details</h4>

        <ul>
            <li>
                Color: @Html.DisplayFor(modelItem => Model.prod.Color)
            </li>
            <li>
                Size: @Html.DisplayFor(modelItem => Model.prod.Size) @Html.DisplayFor(modelItem => Model.prod.SizeUnitMeasureCode)
            </li>
            <li>
                Weight: @Html.DisplayFor(modelItem => Model.prod.Weight) @Html.DisplayFor(modelItem => Model.prod.WeightUnitMeasureCode)
            </li>
        </ul>
            
    </div>



    @Html.ActionLink("Write a review", "Reviews", "Home", new { id = (Model.prod.ProductID) }, null)


    

    <br />

    <h3>
        Product Reviews
    </h3>

    <hr style="border-color:black" />

    <div style="padding-left:10px; padding-right:10px">
        @foreach (var i in Model.reviews)
        {
            <div style="background-color:lightgray; padding:5px 5px 5px 5px">
                <div>
                    <div style="font-size: 20px">
                        @Html.DisplayFor(modelItem => i.name)
                    </div>
                    <div style="color:grey">
                        @Html.DisplayFor(modelItem => i.email)
                    </div>
                    <div style="padding-left: 5px">
                        @for (var i2 = 0; i2 < i.rating && i2 < 5; i2++)
                        {
                            <img src="\images\star.png" alt="This is a big problem..." style="width:15px;height:15px;">
                        }
                    </div>
                </div>

                <p style="background-color:white; width: 100%;">
                    "@Html.DisplayFor(modelItem => i.message)"
                </p>
            </div>
            <br/>
        }
    </div>
</div>